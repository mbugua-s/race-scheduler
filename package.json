{
	"name": "race-scheduler",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"type": "module",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "dotenv -e .env.development -- nest start -b swc --watch --type-check",
		"start:debug": "nest start --debug --watch",
		"start:prod": "dotenv -e .env.production -- node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "vitest run --passWithNoTests",
		"test:watch": "vitest",
		"test:cov": "vitest run --coverage",
		"test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
		"test:e2e": "vitest run --config ./vitest.config.e2e.ts",
		"type-check": "tsc --noEmit",
		"compose:up": "docker compose --env-file .env.development up -d"
	},
	"prisma": {
		"generate": "dotenv -e .env.development -- prisma generate",
		"migrate": "dotenv -e .env.development -- prisma migrate dev",
		"seed": "dotenv -e .env.development -- ts-node --esm prisma/seed.ts"
	},
	"dependencies": {
		"@nestjs/common": "^11.0.1",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.1",
		"@nestjs/platform-express": "^11.0.1",
		"@prisma/client": "^6.18.0",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^11.0.0",
		"dotenv-expand": "^12.0.3",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.38.0",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@swc/cli": "^0.7.8",
		"@swc/core": "^1.13.5",
		"@types/express": "^5.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.7",
		"@types/supertest": "^6.0.2",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jest": "^30.0.0",
		"lint-staged": "^16.2.6",
		"nestjs-zod": "^5.0.1",
		"prettier": "^3.4.2",
		"prisma": "^6.18.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0",
		"unplugin-swc": "^1.5.7",
		"vitest": "^3.2.4"
	}
}
